<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woohsi.bookfriend.dao.UserDao">
    <select id="login" resultType="User" parameterType="User">
        select * from user where email = #{email} and pwd = #{password}
    </select>
    <insert id="register" parameterType="User">
        insert into user(uid, email, pwd) values(null, #{email}, #{password})
    </insert>

    <select id="selectUserByEmail" resultType="User" parameterType="String">
        select * from user where email = #{email}
    </select>
    <select id="selectUserByCode" resultType="User" parameterType="String">
        select * from user where code = #{code}
    </select>
    <update id="updateUser" parameterType="User">
        update user
        set email=#{email},
            pwd=#{password},
            code=#{code}
        where uid=#{uid}
    </update>
</mapper>