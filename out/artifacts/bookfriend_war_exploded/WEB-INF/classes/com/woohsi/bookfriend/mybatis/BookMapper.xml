<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woohsi.bookfriend.dao.BookDao">

    <insert id="saveBook" parameterType="Book">
        insert into book(bkid,bkname,bkprice,bkpress,bkdescription,status,uid)
        values(null, #{bkname}, #{bkprice}, #{bkpress}, #{bkdescription}, #{status}, #{uid})
    </insert>
    <select id="queryBook" parameterType="Integer" resultType="Book">
        select * from book where bkid=#{bkid}
    </select>
    <update id="updateBook" parameterType="Book">
        update book set
            bkname=#{bkname},
            bkprice=#{bkprice},
            bkpress=#{bkpress},
            bkdescription=#{bkdescription},
            status=#{status},
            uid=#{uid}
        where bkid=#{bkid}
    </update>
    <select id="selectAllBooks" resultType="Book">
        select * from book
    </select>
    <select id="selectBookByUid" parameterType="Integer" resultType="Book">
        select * from book where uid=#{uid}
    </select>

    <select id="selectBookByKeyword" parameterType="String" resultType="Book">
        select * from book where bkname like concat('%', #{keyword}, '%');
    </select>
    <delete id="deleteBook" parameterType="Integer">
        delete from book where bkid=#{bkid}
    </delete>
</mapper>